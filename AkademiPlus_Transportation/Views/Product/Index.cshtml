
@model List<AkademiPlus_Transportation.Models.TblProduct>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminControllerLayout.cshtml";
}



<div style="margin-bottom:2px; margin-left:15px;" class="w3-quarter">
    <div class="w3-container w3-red w3-padding-16">
        <div class="w3-left"><i class="fa fa-product-hunt w3-xxxlarge"></i></div>
        <div class="w3-right">
            <h3> @ViewBag.productCount </h3>
        </div>
        <div class="w3-clear"></div>
        <h4>Toplam Ürün Sayısı</h4>
    </div>
</div>

<div class="w3-container">
    <h2 style="color: aliceblue"><span>►</span> Ürün Listesi </h2>
    <table class="table table-bordered">

        <tr>
            <th style="background-color: darkkhaki ">ID</th>
            <th style="background-color: darkkhaki ">Ürün Adı</th>
            <th style="background-color: darkkhaki ">Ürün Boyutu</th>
            <th style="background-color: darkkhaki ">Ürün Açıklaması</th>
            <th style="background-color: darkkhaki ">Sil</th>
            <th style="background-color: darkkhaki ">Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td style="background-color: darkkhaki">@item.ProductID</td>
                <td style="background-color: darkkhaki">@item.ProductName</td>
                <td style="background-color: darkkhaki ">@item.ProductSize</td>
                <td style="background-color: darkkhaki ">@item.ProductDescription</td>
                <td style="background-color: darkkhaki "><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-danger" type="button">Sil</a></td>
                <td style="background-color: darkkhaki "><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Product/AddProduct/" style="color:aliceblue" class="btn btn-primary">Yeni Ürün Kaydı </a>
    <br />
    <br />
</div>