@model AkademiPlus_Transportation.Models.TblCategory
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminControllerLayout.cshtml";
}

<div class="w3-container">
    <h2 style="color: aliceblue"><span>►</span> Kategori Güncelleme </h2>
    <form method="post">
        <label style="color:aliceblue">Kategori ID</label>
        @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
        <br />
        <label style="color:aliceblue">Kategori Adı:</label>
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Kategoriyi Güncelle</button>
    </form>
</div>
